<Window x:Class="RIAB_Restaurent_Management_System.Views.finance.accountsbalance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RIAB_Restaurent_Management_System.Views.finance"
        mc:Ignorable="d"
        Title="Accounts">
    <Grid>
        <DataGrid Name="dg" Margin="0,0,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding id}" />
                <DataGridTextColumn Header="Name" Binding="{Binding name}" />
                <DataGridTextColumn Header="Type" Binding="{Binding type}" />
                <DataGridTextColumn Header="Today" Binding="{Binding today}" />
                <DataGridTextColumn Header="Month" Binding="{Binding month}" />
                <DataGridTextColumn Header="Total" Binding="{Binding total}" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
