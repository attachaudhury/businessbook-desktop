<Window x:Class="RIAB_Restaurent_Management_System.Views.finance.saledetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RIAB_Restaurent_Management_System.Views.finance"
        mc:Ignorable="d"
        Title="saledetails">
    <Grid>
        <Button Click="printPeceipt" Margin="10,10,10,10" VerticalAlignment="Top">Print</Button>
        <DataGrid Name="dg" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding id}" />
                <DataGridTextColumn Header="Name" Binding="{Binding name}" />
                <DataGridTextColumn Header="Price" Binding="{Binding price}" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding qantity}" />
                <DataGridTextColumn Header="Total" Binding="{Binding total}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
