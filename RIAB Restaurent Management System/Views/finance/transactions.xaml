<Window x:Class="RIAB_Restaurent_Management_System.Views.finance.transactions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RIAB_Restaurent_Management_System.Views.finance"
        mc:Ignorable="d"
        Title="transactions">
    <Grid>
        <DataGrid Name="dg" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,10,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding id}" />
                <DataGridTextColumn Header="Amount" Binding="{Binding amount}" />
                <DataGridTextColumn Header="Name" Binding="{Binding name}" />
                <DataGridTextColumn Header="Account" Binding="{Binding financeaccount.name}" />
                <DataGridTextColumn Header="Creator" Binding="{Binding user.name}" />
                <DataGridTextColumn Header="Party" Binding="{Binding user1.name}" />
                <DataGridTextColumn Header="Date" Binding="{Binding date}" />
                <DataGridTextColumn Header="Group" Binding="{Binding groupid}" />
                <DataGridTextColumn Header="Status" Binding="{Binding status}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
