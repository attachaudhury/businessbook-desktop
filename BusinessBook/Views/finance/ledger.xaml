<Window x:Class="BusinessBook.Views.finance.ledger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BusinessBook.Views.finance"
        mc:Ignorable="d"
        Title="Ledger">
    <Grid>
        <Label Content="Amount" HorizontalAlignment="Left" Margin="17,12,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tb_amount" TabIndex="1" Text="" HorizontalAlignment="Left" Height="25" Margin="74,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="115"/>

        <Label Content="Account" HorizontalAlignment="Left" Margin="248,12,0,0" VerticalAlignment="Top"/>
        <ComboBox SelectedIndex="0" x:Name="account_combobox" HorizontalAlignment="Left" Margin="295,4,0,0" VerticalAlignment="Top" Width="145" Height="33"/>
        <Button Content="Save" Click="save" HorizontalAlignment="Left" Margin="478,6,0,0" VerticalAlignment="Top" Width="102" Height="34"/>
        <Label  Content="Pending" HorizontalAlignment="Left" Margin="619,12,0,0" VerticalAlignment="Top"/>
        <Label Name="remaining_label" Content="0" HorizontalAlignment="Left" Margin="730,12,0,0" VerticalAlignment="Top"/>
        <DataGrid Name="dg" Margin="0,146,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding id}" />
                <DataGridTextColumn Header="Amount" Binding="{Binding amount}" />
                <DataGridTextColumn Header="Name" Binding="{Binding name}" />
                <DataGridTextColumn Header="Account" Binding="{Binding financeaccount.name}" />
                <DataGridTextColumn Header="Creator" Binding="{Binding user.name}" />
                <DataGridTextColumn Header="Date" Binding="{Binding date}" />
                <DataGridTextColumn Header="Status" Binding="{Binding status}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
